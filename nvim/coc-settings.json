{
  "tsserver.trace.server": "verbose",
  "tsserver.log": "verbose",
  "tsserver.enableJavascript": true,
  "tsserver.implicitProjectConfig.checkJs": false,

  "javascript.showUnused": true,

  "suggest.enablePreview": true,

  "diagnostic.messageTarget": "float",
  "diagnostic.virtualText": false,
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic.checkCurrentLine": false,
  "diagnostic.errorSign": "✖",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "●",
  "diagnostic.hintSign": "○",

  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "typescript",
    "typescriptreact",
    "json",
    "javascriptreact"
  ],

  "eslint.autoFixOnSave": true,

  "coc.source.ultisnips.enable": true,
  "snippets.ultisnips.directories": ["~/.dotfiles/nvim/ultisnips"],
  "coc.source.ultisnips.filetypes": ["javascript", "typescript"],
  "snippets.extends": {
    "javascriptreact": ["javascript"],
    "typescriptreact": ["javascript"],
    "typescript": ["javascript"],
    "typescript.tsx": ["javascript"]
  },

  "explorer.width": 46,
  "explorer.contentWidth": 43,
  "explorer.position": "right",
  "explorer.file.showHiddenFiles": true,
  "explorer.icon.enableNerdfont": true,
  "explorer.icon.source": "builtin",
  "explorer.previewAction.onHover": false,
  "explorer.git.showIgnored": true,
  "explorer.quitOnOpen": true,
  "explorer.openAction.for.directory": "expandOrCollapse",
  "explorer.openAction.relativePath": true,
  "explorer.icon.customIcons": {
    "icons": {
      "npm": {
        "code": " ",
        "color": "#9c371e"
      },
      "folderClosed": {
        "code": " ",
        "color": "#90A4AE"
      },
      "folderOpened": {
        "code": " ",
        "color": "#90A4AE"
      },
      "css": {
        "code": " ",
        "color": "#42A5F5"
      },
      "javascript": {
        "code": " ",
        "color": "#FFCA28"
      },
      "html": {
        "code": " ",
        "color": "#E44D26"
      },
      "github": {
        "code": " ",
        "color": "#90A4AE"
      },
      "bitbucket": {
        "code": " ",
        "color": "#90A4AE"
      },
      "gitlab": {
        "code": " ",
        "color": "#E24329"
      },
      "env": {
        "code": " ",
        "color": "#90A4AE"
      },
      "markdown": {
        "code": " ",
        "color": "#90A4AE"
      }
    },
    "extensions": {
      "md": "markdown",
      "map": "javascript"
    },
    "filenames": {
      "bitbucket-pipelines.yml": "bitbucket",
      ".gitlab-ci.yml": "gitlab",
      ".env": "env",
      ".env.prod": "env",
      ".env.staging": "env",
      ".env.test": "env"
    },
    "dirnames": {
      "node_modules": "npm",
      ".github": "github"
    }
  },
  "explorer.keyMappings.global": {
    "<cr>": ["expandable?", ["expanded?", "collapse", "expand"], "open"],

    "v": "open:vsplit",

    "y": "copyFilepath",
    "Y": "copyFilename",
    "c": "copyFile",
    "x": "cutFile",
    "p": "pasteFile",
    "d": "delete",
    "D": "deleteForever",

    "a": "addFile",
    "A": "addDirectory",
    "r": "rename",

    "R": "refresh"
  }
}
