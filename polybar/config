[module/pkg]
type = custom/script
exec = $HOME/.dotfiles/polybar/updates.sh
exec-if = "ping -q -w 2 -c 1 www.google.com > /dev/null"
label = %{A1:termite -e "aurman -Syyu" & disown:} %{A3:termite -e "aurman -Syyu" & disown:}%output%%{A} %{A}
tail = true

[module/brightness]
type = custom/ipc
hook-0 = light -G | sed 's/\.[0-9]*//'
format-prefix = " "
format-underline = ${colors.primary}
initial = 1
scroll-down = sudo light -U 10 && polybar-msg -p %pid% hook backlight 0
scroll-up = sudo light -A 10 && polybar-msg -p %pid% hook backlight 0

[module/bluetooth]
type = custom/script
exec = rofi-bluetooth --status
interval = 1
click-left = rofi-bluetooth &
format-underline = ${colors.primary}

[global/wm]
margin-top = 0
margin-bottom = 37
